<core:FragmentDefinition
	xmlns="sap.m"
	xmlns:core="sap.ui.core">
	<Popover
		id="myPopover"
		title="Filter"
		class="sapUiResponsivePadding--header sapUiResponsivePadding--footer"
		placement="Bottom"
		initialFocus="email">
		<footer>
			<OverflowToolbar>
				<ToolbarSpacer/>
				<Button text="Read" press="onRead" />
			</OverflowToolbar>
		</footer>

        <VBox class="sapUiTinyMargin">
            <Label text="Member ID : "></Label>
            <Input value="{popover>/Memberid}"></Input>
        </VBox>
        <VBox class="sapUiTinyMargin">
            <Label text="Member Name : "></Label>
            <Input value="{popover>/Membername}"></Input>
        </VBox>
        
	</Popover>
</core:FragmentDefinition>
